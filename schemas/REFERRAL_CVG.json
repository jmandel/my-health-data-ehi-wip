{
  "name": "REFERRAL_CVG",
  "description": "The REFERRAL_CVG table contains coverage information for referrals.",
  "primaryKey": [
    {
      "columnName": "REFERRAL_ID",
      "ordinalPosition": 1
    },
    {
      "columnName": "LINE",
      "ordinalPosition": 2
    }
  ],
  "columns": [
    {
      "ordinalPosition": 1,
      "name": "REFERRAL_ID",
      "type": "NUMERIC",
      "discontinued": false,
      "description": "The unique ID of the referral in database."
    },
    {
      "ordinalPosition": 2,
      "name": "LINE",
      "type": "INTEGER",
      "discontinued": false,
      "description": "A line number that is used to identify a group of coverage-related information. For example, if a referral has 2 valid coverages, line 1 of the coverage items contains the information about the first coverage, line 2 contains the information about the second coverage."
    },
    {
      "ordinalPosition": 3,
      "name": "CVG_ID",
      "type": "NUMERIC",
      "discontinued": false,
      "description": "The ID of a coverage that is valid for the referral."
    },
    {
      "ordinalPosition": 4,
      "name": "CVG_USED_YN",
      "type": "VARCHAR",
      "discontinued": false,
      "description": "A yes/no flag that indicates whether or not the coverage should be considered available for the referral use in non-UM (utilization management) workflows. For UM workflows, consider using SUBMITTED_UM_AUTHS_YN.  The coverage may be valid on the dates, but still inappropriate to use. Setting the flag to Yes means that the coverage is all right to use.",
      "entries": [
        "Yes",
        "No"
      ]
    },
    {
      "ordinalPosition": 5,
      "name": "AUTH_REQUIRED_YN",
      "type": "VARCHAR",
      "discontinued": false,
      "description": "A flag to indicate whether the coverage requires external authorization to be received (as from an insurance carrier) for the services."
    },
    {
      "ordinalPosition": 6,
      "name": "CARRIER_AUTH_CMT",
      "type": "VARCHAR",
      "discontinued": false,
      "description": "The carrier authorization number or comment, indicating that authorization was received."
    },
    {
      "ordinalPosition": 7,
      "name": "EFF_CVG_PRECERT_NUM",
      "type": "VARCHAR",
      "discontinued": false,
      "description": "Precertification number associated with a coverage on a referral."
    },
    {
      "ordinalPosition": 8,
      "name": "EFF_CVG_AUTH_CMT",
      "type": "VARCHAR",
      "discontinued": false,
      "description": "Comments regarding authorization specific to a coverage used on a referral."
    },
    {
      "ordinalPosition": 9,
      "name": "CVG_INVALID_FLAG",
      "type": "VARCHAR",
      "discontinued": false,
      "description": "Flag for invalid coverage for non-UM (utilization management) workflows."
    },
    {
